{
  "name": "redox",
  "version": "0.1.0",
  "description": "Reverse documentation engine (redox) - TS CLI with LLM-driven synthesis",
  "main": "index.js",
  "scripts": {
    "test": "vitest run",
    "build": "tsc -p tsconfig.json",
    "dev": "tsx src/cli/index.ts --help",
    "redox": "redox",
    "redox\\:all": "redox all",
    "redox\\:dev": "redox dev",
    "redox\\:user": "redox user",
    "redox\\:audit": "redox audit",
    "redox\\:check": "redox check --gates schema,coverage,evidence,build,traceability",
    "redox\\:render": "bash docs/scripts/render-mermaid.sh",
    "lint": "eslint . --max-warnings 0",
    "format": "prettier --write src bin",
    "format:check": "prettier --check src bin"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "type": "module",
  "bin": {
    "redox": "bin/redox",
    "redox-ui": "bin/redox-ui"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "@babel/parser": "^7.26.2",
    "@babel/traverse": "^7.25.9",
    "blessed": "^0.1.81",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "execa": "^9.6.0",
    "fast-glob": "^3.3.3",
    "madge": "^8.0.0",
    "markdown-it": "^14.1.0",
    "md-to-pdf": "^5.2.0",
    "openai": "^6.8.1",
    "ora": "^9.0.0",
    "pg": "^8.13.0",
    "ts-morph": "^27.0.2",
    "yaml": "^2.8.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vitest/coverage-v8": "^4.0.8",
    "eslint": "^9.39.1",
    "markdown-link-check": "^3.14.1",
    "mermaid-cli": "^0.2.4",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.8"
  }
}
