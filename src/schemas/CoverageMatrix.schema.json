{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://redox.nyxk.dev/schemas/CoverageMatrix.schema.json",
  "title": "Revdoc Coverage Matrix",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "schemaVersion": { "type": "string", "const": "1.0" },
    "generatedAt": { "type": "string", "format": "date-time" },
    "routes": {
      "type": "array",
      "items": { "type": "string" },
      "uniqueItems": true
    },
    "endpoints": {
      "type": "array",
      "items": { "type": "string" },
      "uniqueItems": true
    },
    "useCases": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" }
        },
        "required": ["id"]
      },
      "uniqueItems": true
    },
    "links": {
      "description": "Triads establishing end-to-end traceability",
      "type": "array",
      "items": { "$ref": "#/$defs/Triad" }
    },
    "unmapped": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "routes": {
          "type": "array",
          "items": { "type": "string" },
          "uniqueItems": true,
          "default": []
        },
        "endpoints": {
          "type": "array",
          "items": { "type": "string" },
          "uniqueItems": true,
          "default": []
        }
      },
      "required": ["routes", "endpoints"]
    },
    "stats": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "routeCount": { "type": "integer", "minimum": 0 },
        "endpointCount": { "type": "integer", "minimum": 0 },
        "useCaseCount": { "type": "integer", "minimum": 0 },
        "linkCount": { "type": "integer", "minimum": 0 }
      }
    }
  },
  "required": [
    "schemaVersion",
    "generatedAt",
    "routes",
    "endpoints",
    "useCases",
    "links",
    "unmapped"
  ],
  "$defs": {
    "Evidence": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "path": { "type": "string", "minLength": 1 },
        "startLine": { "type": "integer", "minimum": 1 },
        "endLine": { "type": "integer", "minimum": 1 }
      },
      "required": ["path", "startLine", "endLine"]
    },
    "Triad": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "routeId": { "type": "string" },
        "endpointId": { "type": "string" },
        "useCaseId": { "type": "string" },
        "inferred": { "type": "boolean", "default": false },
        "evidence": { "type": "array", "items": { "$ref": "#/$defs/Evidence" } }
      },
      "required": ["routeId", "endpointId", "useCaseId"]
    }
  }
}
