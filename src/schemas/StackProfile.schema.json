{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://redox.nyxk.dev/schemas/StackProfile.schema.json",
  "title": "Redox Stack Profile and Directory Map",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "schemaVersion": { "type": "string", "const": "1.0" },
    "generatedAt": { "type": "string", "format": "date-time" },
    "languages": {
      "type": "array",
      "items": { "type": "string" },
      "uniqueItems": true,
      "default": []
    },
    "frameworks": {
      "type": "array",
      "items": { "type": "string" },
      "uniqueItems": true,
      "default": []
    },
    "packageManagers": {
      "type": "array",
      "items": { "type": "string" },
      "uniqueItems": true,
      "default": []
    },
    "ciProviders": {
      "type": "array",
      "items": { "type": "string" },
      "uniqueItems": true,
      "default": []
    },
    "containers": {
      "description": "Containerization tools in use (e.g., docker, docker-compose, k8s).",
      "type": "array",
      "items": { "type": "string" },
      "uniqueItems": true,
      "default": []
    },
    "iac": {
      "description": "Infrastructure-as-code technologies (e.g., Terraform, Kustomize).",
      "type": "array",
      "items": { "type": "string" },
      "uniqueItems": true,
      "default": []
    },
    "directories": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "app": {
          "type": "array",
          "items": { "type": "string" },
          "uniqueItems": true,
          "default": []
        },
        "routes": {
          "type": "array",
          "items": { "type": "string" },
          "uniqueItems": true,
          "default": []
        },
        "migrations": {
          "type": "array",
          "items": { "type": "string" },
          "uniqueItems": true,
          "default": []
        },
        "resources": {
          "type": "array",
          "items": { "type": "string" },
          "uniqueItems": true,
          "default": []
        },
        "tests": {
          "type": "array",
          "items": { "type": "string" },
          "uniqueItems": true,
          "default": []
        },
        "docs": {
          "type": "array",
          "items": { "type": "string" },
          "uniqueItems": true,
          "default": []
        }
      },
      "required": ["app", "routes", "migrations", "resources", "tests"]
    }
  },
  "required": [
    "schemaVersion",
    "generatedAt",
    "languages",
    "frameworks",
    "packageManagers"
  ]
}
