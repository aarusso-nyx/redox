{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://redox.nyxk.dev/schemas/UseCases.schema.json",
  "title": "Revdoc Use Cases / Journeys",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "schemaVersion": { "type": "string", "const": "1.0" },
    "generatedAt": { "type": "string", "format": "date-time" },
    "roles": {
      "type": "array",
      "items": { "type": "string" },
      "uniqueItems": true,
      "minItems": 1
    },
    "cases": {
      "type": "array",
      "items": { "$ref": "#/$defs/UseCase" },
      "minItems": 1
    },
    "stats": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "roleCount": { "type": "integer", "minimum": 0 },
        "caseCount": { "type": "integer", "minimum": 0 },
        "stepCount": { "type": "integer", "minimum": 0 }
      }
    }
  },
  "required": ["schemaVersion", "generatedAt", "roles", "cases"],
  "$defs": {
    "Evidence": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "path": { "type": "string", "minLength": 1 },
        "startLine": { "type": "integer", "minimum": 1 },
        "endLine": { "type": "integer", "minimum": 1 },
        "note": { "type": "string" }
      },
      "required": ["path", "startLine", "endLine"]
    },
    "Ref": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "routeIds": {
          "type": "array",
          "items": { "type": "string" },
          "uniqueItems": true
        },
        "endpointIds": {
          "type": "array",
          "items": { "type": "string" },
          "uniqueItems": true
        }
      }
    },
    "Step": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": { "type": "string" },
        "action": { "type": "string" },
        "actorRole": { "type": "string" },
        "refs": { "$ref": "#/$defs/Ref" },
        "evidence": { "type": "array", "items": { "$ref": "#/$defs/Evidence" } }
      },
      "required": ["action"]
    },
    "AltFlow": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": { "type": "string" },
        "when": { "type": "string" },
        "steps": { "type": "array", "items": { "$ref": "#/$defs/Step" } }
      },
      "required": ["when", "steps"]
    },
    "Exception": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": { "type": "string" },
        "when": { "type": "string" },
        "handling": { "type": "string" }
      },
      "required": ["when", "handling"]
    },
    "UseCase": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "title": { "type": "string", "minLength": 1 },
        "goal": { "type": "string" },
        "actors": {
          "type": "array",
          "items": { "type": "string" },
          "uniqueItems": true
        },
        "preconditions": { "type": "array", "items": { "type": "string" } },
        "triggers": { "type": "array", "items": { "type": "string" } },
        "mainFlow": {
          "type": "array",
          "items": { "$ref": "#/$defs/Step" },
          "minItems": 1
        },
        "alternateFlows": {
          "type": "array",
          "items": { "$ref": "#/$defs/AltFlow" },
          "default": []
        },
        "exceptions": {
          "type": "array",
          "items": { "$ref": "#/$defs/Exception" },
          "default": []
        },
        "postconditions": { "type": "array", "items": { "type": "string" } },
        "acceptanceCriteria": {
          "type": "array",
          "items": { "type": "string" }
        },
        "refs": { "$ref": "#/$defs/Ref" },
        "inferred": { "type": "boolean", "default": false },
        "evidence": {
          "type": "array",
          "items": { "$ref": "#/$defs/Evidence" }
        }
      },
      "required": ["id", "title", "mainFlow"]
    }
  }
}
